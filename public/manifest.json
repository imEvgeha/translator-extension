{
    "name": "__MSG_name__",
    "description": "__MSG_desc__",
    "default_locale": "en",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "favicon.png",
        "32": "logo192.png",
        "48": "logo192.png",
        "128": "logo512.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["constants.js", "helpers.js", "contentScript.js"],
            "css": ["contentScript.css"]
        }
    ],
    "action": {
        "default_title": "__MSG_title__",
        "default_popup": "index.html",
        "default_icon": {
            "16": "favicon.png",
            "32": "logo192.png",
            "48": "logo192.png",
            "128": "logo512.png"
        }
    },
    "permissions": ["storage"]
}
